<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlt_list_item_id_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg" >

    <ImageView
        android:id="@+id/img_list_item_id_card"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:contentDescription="@string/app_name"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/home_pic1" />

    <TextView
        android:id="@+id/txt_list_item_id_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/img_list_item_id_card" />

    <TextView
        android:id="@+id/txt_list_item_id_card_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_list_item_id_card_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/img_list_item_id_card" />

    <ImageView
        android:id="@+id/img_list_item_id_card_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_delete"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/app_name" />

</RelativeLayout>